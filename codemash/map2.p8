 -- jump
 if btnp(üÖæÔ∏è) and 
   (p.on_ground or p.jump<1) then
   p.on_ground=false
   p.jump+=1
   p.dy=p.dy-2
 end
 
 -- check wall coll
 if hit(p.x+p.dx,p.y,7,7,1) then
  player.dx=0
 end
  
 -- check ground coll
 if hit(p.x,p.y+p.dy,7,7,1) then
  if p.dy>0 then
   p.on_ground=true
  end
   p.dy=0        
 end
 
 -- decel if on ground
 if p.on_ground then
  p.jump=0
 end
 
 -- max acceleration
 if p.dx > max_speed then
  p.dx = max_speed
 end
 
