function _update60()
 local p = player
 -- apply gravity
 p.dy=p.dy+0.05
 -- up/ down
 if (btn(‚û°Ô∏è)) then
  p.dx=p.dx+0.05
 end
 if (btn(‚¨ÖÔ∏è)) then
   p.dx=p.dx-0.05
